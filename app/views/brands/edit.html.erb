<div class="container">

  <div class="row">
    <div class="col-sm-7">
      <%= form_for @brand, url: {action: "create"}, html: {multipart: true} do |f| %>
        <h2>Brand: <%= @brand.brand_name  %> <code>EDIT</code></h2>
        <hr class="colorgraph">
        <div class="form-group">
          <%= f.text_field :brand_name, class: "form-control input-lg", placeholder: "Brand Name"  %>
        </div>
        <div class="form-group">
          <%= f.file_field :image, class: "form-control file-upload" %>
        </div>
        <hr class="colorgraph">
        <div class="row">
          <div class="col-xs-12 col-md-6">
            <%= submit_tag "UPDATE", class: "form-control btn btn-primary btn-block btn-lg"  %>
          </div>
          <div class="col-xs-12 col-md-6">
            <%= submit_tag "CANCEL", class: "form-control btn btn-success btn-block btn-lg"  %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>