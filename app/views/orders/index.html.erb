<table class="table table-striped table-bordered" id="data-table">
  <thead>
  <tr>
    <th>Supplier</th>
    <th>Qty</th>
    <th>Total FOB</th>
    <th>Total Cost</th>
    <th>Balance Amount</th>
  </tr>
  </thead>
  <tbody>
  <% @orders.each do |order| %>
    <tr>
      <td><%= order.supplier  %></td>
      <td><%= order.qty  %></td>
      <td><%= order.total_fob  %></td>
      <td><%= order.total_cost  %></td>
      <td><%= order.balance_amount  %></td>
    </tr>
  <% end %>
  </tbody>
</table>
